<%= form_for(@alerting = Alerting.new, html: {class: "form-inline"}) do |form| %>
	            <%= form.label :starts_at %>
	          	<%= form.text_field :starts_at, :placeholder => "mm/dd/yyyy", :id => "starts_at", :class => 'text_field datepicker', :value => :starts_at.try(:strftime, "%m/%d/%Y") %>
 	    		<%= form.label :ends_at %>
 	    		<%= form.text_field :ends_at, :placeholder => "mm/dd/yyyy", :id => "ends_at", :class => 'text_field datepicker', :value => :ends_at.try(:strftime, "%m/%d/%Y") %>
	    		<%= form.label :alert_id %>
    			<%= form.select(:alert_id, Alert.closure.collect {|p| [ "#{p.alert_type} : #{p.description}", p.id ] }, {prompt: 'Issue'}) %>
	    		<%= form.hidden_field :alertable_type, value: alertable_type %>
	    		<%= form.hidden_field :alertable_id, value: alertable.id %>
	    		 <%= form.submit "Create Closure", :class => "btn btn-default", :type => "submit"%>
	    	<% end %>