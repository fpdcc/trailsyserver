<p id="notice"><%= notice %></p>

<h1>Listing Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Feature Type</th>
      <th>Location ID</th>
      <th>Status Type</th>
      <th>Reason</th>
      <th>Title</th>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.statusable_type %></td>
        <td><%= status.statusable_id %></td>
        <td><%= status.status_type %></td>
        <td><%= status.reason %></td>
        <td><%= status.title %></td>
        <td><%= status.description %></td>
        <td><%= status.start_date %></td>
        <td><%= status.end_date %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

