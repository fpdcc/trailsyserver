<p id="notice"><%= notice %></p>

<div class='formContent-Show'>
  <h3>
    Name:
    <span class='formAnswer'><%= @trailhead.name %></span>
  </h3>
  <h3>
    POI Type:
    <span class='formAnswer'><%= @trailhead.poi_type %></span>
  </h3>
  <h3>
    Trailhead ID:
    <span class='formAnswer'><%= @trailhead.trailhead_id %></span>
  </h3>
  <h3>
    Segment IDs:
    <span class='formAnswer'><%= @trailhead.segment_ids %></span>
  </h3>
  <h3>
    Trail IDs:
    <span class='formAnswer'><%= @trailhead.trail_ids %></span>
  </h3>
  <h3>
    Park:
    <span class='formAnswer'><%= @trailhead.park %></span>
  </h3>
  <h3>
    Address:
    <span class='formAnswer'><%= @trailhead.address %></span>
  </h3>
  <h3>
    City:
    <span class='formAnswer'><%= @trailhead.city %></span>
  </h3>
  <h3>
    State:
    <span class='formAnswer'><%= @trailhead.state %></span>
  </h3>
  <h3>
    Zip:
    <span class='formAnswer'><%= @trailhead.zip %></span>
  </h3>
  <h3>
    Source:
    <span class='formAnswer'><%= @trailhead.source.code %></span>
  </h3>

  <h3>
    Location:
    <span class='formAnswer'><%= @trailhead.geom %></span>
  </h3>
  <h3>
    Parking:
    <span class='formAnswer'><%= @trailhead.parking %></span>
  </h3>
  <h3>
    Drinking Water:
    <span class='formAnswer'><%= @trailhead.drinkwater %></span>
  </h3>
  <h3>
    Restrooms:
    <span class='formAnswer'><%= @trailhead.restrooms %></span>
  </h3>
  <h3>
    Kiosk:
    <span class='formAnswer'><%= @trailhead.kiosk %></span>
  </h3>

  <table>
    <thead>
      <tr>
        <th>Status Type</th>
        <th>Reason</th>
        <th>Title</th>
        <th>Description</th>
        <th>Start Date</th>
        <th>End Date</th>
      </tr>
    </thead>
    <tbody>
      <% @trailhead.statuses.each do |status| %>
        <tr>
          <td><%= status.status_type %></td>
          <td><%= status.reason %></td>
          <td><%= status.title %></td>
          <td><%= status.description %></td>
          <td><%= status.start_date %></td>
          <td><%= status.end_date %></td>

        </tr>
      <% end %>
      </tbody>
    </table>
  
</div>

<div class='formButtons'>
  <!--back button <span class='backButton'>
    <%= link_to 'Back', trailheads_path %>
  </span> -->
  <span class='addNewButton'>
    <%= link_to 'Edit', edit_trailhead_path(@trailhead) %>
  </span>
</div>
