<p id="notice"><%= notice %></p>

<h1>Listing Trails Descs</h1>

<table class="table-striped table-bordered table-hover">
  <thead>
    <tr>
      <% for column in TrailsDesc.column_names %>
        <th><%= column %></th>
      <% end %>
      <th colspan="3">Make Changes</th>
    </tr>
  </thead>
  <tbody>
    <% @trails_descs.each do |trails_desc| %>
      <tr>
        <% trails_desc.attributes.each do |attribute| %>
          <td><%= attribute[1] %></td>
        <% end %>
        <td><%= link_to 'Show', trails_desc %></td>
        <td><%= link_to 'Edit', edit_trails_desc_path(trails_desc) %></td>
        <td><%= link_to 'Destroy', trails_desc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

