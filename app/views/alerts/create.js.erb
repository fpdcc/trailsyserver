<% Rails.logger.warn("In the create.js.erb file") %>
//console.log("In create.js erb file!");
<% Rails.logger.info("Error div = " + @error_div_id ) %>
<% if @result %>
  <% Rails.logger.warn("In Create_result if statement") %>
  //console.log("In Create_result if statement");
  location.reload();
  $("#notice").html("<%= flash[:notice] %>");
<% else %>
  //console.log("In Create_result else statement");
  <% Rails.logger.warn("In Create_result else statement") %>
  //console.log("the div is: <%= @error_div_id %>")
  $('#error-div').html("");

  $("<%= escape_javascript(render partial: 'alerts/alert_error', locals: { alert: @alert } ) %>").prependTo("#<%= @error_div_id %>");
<% end %>
