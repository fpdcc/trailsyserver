
<h1>Location Alerts & Closures</h1>

<%= search_form_for @q, url: request.path, html: { class: 'form-inline' } do |f| %>
	<div class="form-group">
	<%= f.label :name_or_maintenance_div_nickname_cont, "Name Contains:" %>
  	<%= f.search_field :name_or_maintenance_div_nickname_cont, class: "form-control" %>
  	</div>
  	<div class="form-group">
  	<%= f.label :maintenance_div_cont, "Maintenance Division:" %>
  	<%= f.select :maintenance_div_cont, Pointsofinterest.maintenance_divs, {include_blank: true}, {class: "form-control" } %>
  	</div>
	<%= f.submit class: "btn btn-success" %>
	<%= link_to 'Clear Search', request.path, class: "btn btn-default" %>
<% end %>

<%= render partial: 'table', locals: {items: @pointsofinterests_active, alertable_type: "Pointsofinterest"} %>
<br>
<%= render partial: 'table', locals: {items: @pointsofinterests, alertable_type: "Pointsofinterest"} %>

<%= will_paginate @pointsofinterests, renderer: BootstrapPagination::Rails %>
