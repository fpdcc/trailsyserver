<p id="notice"><%= notice %></p>

<h1>Alerts</h1>
<h2>"Closure" alerts are selectable by Level 1 users</h2>

<table>
  <thead>
    <tr>
      <th>Alert</th>
      <th>Alert type</th>
      <th>Description</th>
      <th>Link</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.alert_id %></td>
        <td><%= alert.alert_type %></td>
        <td><%= alert.description %></td>
        <td><%= alert.link %></td>
        <td><%= alert.created_by %></td>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alert', new_alert_path %>
