<% classType = "warning" %>
<% alertTypeName = "ALERT" %>
<% deleteName = "Remove" %>
<% if alert.alert_type == "closure" %>
	<% classType = "danger" %>
	<% alertTypeName = "CLOSED" %>
	<% deleteName = "Reopen" %>
<% else %>
	<% if !alert.user.level1? && current_user.level1? %>
		<% classType = classType + " reduced-vis" %>
	<% end %>
<% end %>
<li class="dashboard bg-<%= classType %>"><span class="label label-<%= classType %>"><%= alertTypeName %></span> <strong><%= alert.starts_at.strftime('%m/%d/%Y') %>-<% if alert.ends_at.present? %><%= alert.ends_at.strftime('%m/%d/%Y') %><% else %> No end date set.<% end %></strong> <%= alert.full_desc %> <%= alert.link %> <% if (alert.user.level1? && current_user.level1?) || (!current_user.level1?) %><button id="edit-<%= alertable_id %>-<%= alert.id %>" data-alertable-id="<%= alertable_id.parameterize.underscore %>" data-alertable_type="<%= alertable_type %>" data-alert-id="<%= alert.id %>" class="edit-button btn btn-xs btn-info">Update</button> <% if alertable_type == 'Pointsofinterest' && alert.trail_systems.present? %><%= link_to "#{deleteName}", 'trail', class: "btn btn-xs btn-danger" %><% else %><%= link_to "#{deleteName}", alert, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Are you sure you want to remove this #{alert.alert_type} '#{alert.full_desc}'?" } %><% end %><% end %>

<div id="form-edit-<%= alertable_id.parameterize.underscore %>-<%= alert.id %>" class="form-edit" style="display: none">
	<% if alertable_type == 'Pointsofinterest' && alert.trail_systems.present? %>
		<strong>Please edit this on the <%= link_to 'Trail Alerts Page', 'trail' %>.</strong>
	<% else %>
		<h4>Edit Alert</h4>
		<%= render partial: "form_embed_#{alertable_type}", locals: {alert: alert, alertable: alertable, alertable_type: alertable_type, path: {controller: "alerts", action: "update"}} %>
	<% end %>
</div>
</li>