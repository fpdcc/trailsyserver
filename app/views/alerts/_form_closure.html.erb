<%= form_for(@alert, html: {class: "form-horizontal"}) do |closure_form| %>
	<div class="form-group">
	<%= closure_form.label :starts_at %>
	<%= closure_form.text_field :starts_at, :placeholder => "mm/dd/yyyy", :id => "starts_at", :class => 'text_field datepicker', :value => :starts_at.try(:strftime, "%m/%d/%Y") %>
	<%= closure_form.label :ends_at %>
	<%= closure_form.text_field :ends_at, :placeholder => "mm/dd/yyyy", :id => "ends_at", :class => 'text_field datepicker', :value => :ends_at.try(:strftime, "%m/%d/%Y") %>
	</div>
	<div class="form-group">
	<%= closure_form.label :description %> 
    <%= closure_form.select :description, [['Ice', 'Ice'], ['Water', 'Water']] %>
    </div>
    <div class="form-group">
    <%= closure_form.hidden_field :alert_type, value: 'closure' %>
    <%= closure_form.fields_for :alertings do |alerting| %>
		<%= alerting.hidden_field :alertable_type, value: alertable_type %>
		<%= alerting.hidden_field :alertable_id, value: alertable.id %>
	<% end %>
	<%= closure_form.submit "Create Closure", :class => "btn btn-default", :type => "submit"%>
	</div>
	
<% end %>