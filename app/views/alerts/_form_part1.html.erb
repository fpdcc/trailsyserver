<% closure_options = current_user.level1? ? Alert.closure_options : (Alert.closure_options + ["Other"]) %>
<div class="form-group">
    <% if !current_user.level1? %>
        <%= f.label :alert_type %>
        <%= f.select :alert_type, Alert.alert_types.map { |key, value| [key.humanize, key] }, {prompt: "Select"}, {class: "form-control alert_alert_type", id: "field-alert_type-#{alertable_id}", dataid: "#{alertable_id}"} %>
    <% else %>
      <%= f.hidden_field :alert_type, readonly: true, value: 'closure' %>
    <% end %>
  </div>
  <div class="form-group" id="form-group-reason-<%= alertable_id %>">
    <%= f.label :reason %>
    <%= f.select :reason, closure_options, {prompt: "Select"}, {class: "form-control alert_reason", id: "field-reason-#{alertable_id}", dataid: "#{alertable_id}"} %>
  </div>
  <div class="form-group" id="form-group-description-<%= alertable_id %> ">
    <%= f.label :description %><br>
    <%= f.text_field :description, readonly: current_user.level1?, class: "form-control", id: "field-description-#{alertable_id}" %>
  </div>
  <% if !current_user.level1? %>
    <div class="form-group" id="field-link">
      <%= f.label :link %><br>
      <%= f.text_field :link, class: "form-control" %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :starts_at, "Start Date" %>
    <%= f.date_select :starts_at, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :ends_at, "End Date" %>
    <%= f.date_select :ends_at, class: "form-control" %>
  </div>